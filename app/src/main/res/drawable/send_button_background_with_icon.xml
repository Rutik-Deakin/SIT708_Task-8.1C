<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" /> <!-- Set the desired gray color -->
            <corners android:radius="2dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>

    <!-- Drawable Icon -->
    <item android:drawable="@drawable/baseline_send_24"
        android:gravity="center"
        android:width="24dp"
        android:height="24dp"
        android:top="0dp" /> <!-- Adjust the top inset to center the drawable vertically -->
</layer-list>
